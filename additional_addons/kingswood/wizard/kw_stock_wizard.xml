        <!--####################################################### DC Upload Files ############################################################# -->

        <record id="kw_dc_upload_form" model="ir.ui.view">
            <field name="name">kw.dc.upload.form</field>
            <field name="model">delivery.import</field>
            <field name="arch" type="xml">
                <form string="Upload File" version="7.0">
                    <group>
