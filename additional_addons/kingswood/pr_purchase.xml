<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
	<record id="pr_purchase_order_form" model="ir.ui.view">
            <field name="name">pr_purchase_order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//header" position="inside">
 					<button name="%(prova.action_purchase_reports_wzd)d" string="Print Report" type="action"/> 
            	</xpath> 
            	
            	<xpath expr="//field[@name='partner_id']" position="attributes">
            		<attribute name="options">{'no_create':true}</attribute>
            	</xpath>
            	
            	<xpath expr="//notebook/page[@string='Products']/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
            		<attribute name="options">{'no_create':true}</attribute>
            	</xpath>

            	<xpath expr="//notebook/page[@string='Products']/field[@name='order_line']/tree/field[@name='account_analytic_id']" position="attributes">
            		<attribute name="options">{'no_create':true}</attribute>
            	</xpath>

            	<xpath expr="//notebook/page[@string='Products']/field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
            		<attribute name="options">{'no_create':true}</attribute>
            	</xpath>
            	
            	<xpath expr="//notebook/page[@string='Products']/field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
            		<attribute name="options">{'no_create':true}</attribute>
            	</xpath>
            	
            	<xpath expr="//notebook/page[@string='Deliveries &amp; Invoices']/group/group/field[@name='location_id']" position="attributes">
            		<attribute name="options">{'no_create':true}</attribute>
            	</xpath>

            	<xpath expr="//notebook/page[@string='Deliveries &amp; Invoices']/group/group/field[@name='incoterm_id']" position="attributes">
            		<attribute name="options">{'no_create':true}</attribute>
            	</xpath>
            	
            	
            	<xpath expr="//notebook/page[@string='Deliveries &amp; Invoices']/group/group[2]/field[@name='payment_term_id']" position="attributes">
            		<attribute name="options">{'no_create':true}</attribute>
            	</xpath>
            	
            	<xpath expr="//notebook/page[@string='Deliveries &amp; Invoices']/group/group[2]/field[@name='fiscal_position']" position="attributes">
            		<attribute name="options">{'no_create':true}</attribute>
            	</xpath>

            	<xpath expr="//group/group/field[@name='pricelist_id']" position="attributes">
            		<attribute name="options">{'no_create': True, 'no_open':True}</attribute>
            	</xpath>
            	
            	<xpath expr="//page[@string='Deliveries &amp; Invoices']/group/group/field[@name='shipped']" position="after">
						<field name='courier'/>
						<field name='user_id' string='Requistioner' options="{'no_create':true}"/>
						<field name='ship_via'/>
						<field name='ship_term'/>
						<field name='partner_id_ref' invisible='1'/>
            			<field name="in_records" invisible="1"/>
				</xpath> 
				
            	<xpath expr="//page[@string='Deliveries &amp; Invoices']/group/group/field[@name='location_id']" position="replace"/>
				<field name="picking_type_id" position="after">
					<field name="location_id" groups="stock.group_locations" domain="[('company_id','=',company_id)]"/>
					<field name="shipping_way"/>
				</field>
				
     			<xpath expr="//page[@string='Deliveries &amp; Invoices']/group/group/field[@name='date_approve']" position="after">
					<field name='ref'/>
     				<field name="type"/>
				</xpath> 
				
            	<xpath expr="//field[@name='pricelist_id']" position="attributes">
            		<attribute name="domain">[('company_id','=',company_id),('type','=','purchase')]</attribute>
            	</xpath>
				
    			<xpath expr="//field[@name='currency_id']" position="attributes">
 					<attribute name="readonly">1</attribute>
				</xpath>				
								
     			<xpath expr="//field[@name='currency_id']" position="after">
						<field name='currency_id2' invisible='1'/>
						<field name='currency_id3' invisible='1'/>
				</xpath>	
 				
            	<xpath expr="//page[@string='Deliveries &amp; Invoices']" position="after">
            		<page string="Documents Required">
            			<group string="Documents Required" col="4" colspan="2">
            				<field name="invoice"/>
            				<field name="analysis"/>
            				<field name="packing_list"/>
            				<field name="msds"/>
            				<field name="iso"/>
            				<field name="halal_kosher"/>
            				<field name="conformity"/>
            				<field name="brc"/>
            				<field name="others"/>
            				<field name="food_laws"/>
            				
            			</group>
            			
            		</page>
            		
            	</xpath>
 				
 				
											
				<xpath expr="//page[@string='Products']/group" position="replace">
					 <group col="6" colspan="3">
						
					 	<group> 
					 		<field name="untaxed_amount1" string="Untaxed Amount" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/> 
					 		<field name="amount_tax1" string = "Taxes" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/> 
					 		<field name="amount_total1" string = "Total" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/> 
					 	</group>
					 	
					 	<!--<group> 
							<field name="amount_untaxed" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/> 
							<field name="amount_tax" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/> 
							<field name="amount_total" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/> 
						</group>-->
					 	
					 	<group class="oe_right"> 
							<field name="untaxed_amount2" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id2'}" nolabel="1"/> 
							<label string=""/> 
							<field name="amount_tax2" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id2'}" nolabel="1"/> 
							<label string=""/> 
							<field name="amount_total2" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id2'}" nolabel="1"/>
							 <label string=""/>
						 </group> 
						 <group> 
						 	<field name="untaxed_amount3" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id3'}" nolabel="1"/> 
						 	<label string=""/>
						 	<field name="amount_tax3" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id3'}" nolabel="1"/>
						 	<label string=""/>
						 	<field name="amount_total3" invisible="0" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id3'}" nolabel="1"/>
						 	<label string=""/> 
						 	<div class="oe_subtotal_footer_separator oe_inline">
						 		<label for="amount_total" />
						 		<button name="button_dummy"
						 			states="draft,sent" string="(update)" type="object" class="oe_edit_only oe_link"/>
						 	</div>
						 </group> 
					</group> 	
					     <field name="amount_in_words" invisible="1"/>
     					<field name="amount_in_words2" invisible="1"/>
     					<field name="amount_in_words3" invisible="1"/>

				</xpath>
            	
            	<xpath expr="//page[@string='Products']/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
            		<attribute name="context">{'currency_id':currency_id}</attribute>
            	</xpath>
            	
            	<xpath expr="//page[@string='Products']/field[@name='order_line']/tree/field[@name='product_qty']" position="attributes">
            		<attribute name="context">{'currency_id':currency_id}</attribute>
            	</xpath>
								
				<xpath expr="//page[@string='Products']/field[@name='order_line']/tree/field[@name='price_unit']" position="before">
					<field name='secondary_unit_price' invisible='1'/> 
					<field name='currency_id' domain="[('company_id','=',parent.company_id)]" required="1" on_change="currency_id_change(parent.pricelist_id,product_id,product_qty,False,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,False,parent.state,parent.currency_id , currency_id,context)"
					 options="{'no_create':true}"/>
				</xpath>
					
				 <xpath expr="//page[@string='Products']/field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
					<field name='secondary_currency'  on_change="onchange_secondary_currency(secondary_currency,parent.currency_id,context)"
						invisible='1' nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id', 'no_create':true}"/>
				</xpath> 

				 <xpath expr="////page[@string='Products']/field[@name='order_line']/tree/field[@name='date_planned']" position="attributes">
				 	 <attribute name="invisible">1</attribute>
				</xpath> 		
				
				 <xpath expr="////page[@string='Products']/field[@name='order_line']/tree/field[@name='product_qty']" position="before">
						<field name='packing_id' options="{'no_create':true}"/> 
				</xpath> 				
						
     			<xpath expr="//page[@string='Bid']/group/field[@name='bid_validity']" position="after">
					<field name='email_send_date'/>
				</xpath> 
            	
            	<xpath expr="//page[@string='Products']/field[@name='order_line']/tree[@string='Purchase Order Lines']" position="attributes">
            		<attribute name="editable"/>
            	</xpath>
            	
            	<xpath expr="//field[@name='currency_id']" position="after">
            		<field name="cf1_amount"/>
            	</xpath>
            	
								
			</field>
		</record>

    	<record id="pr_purchase_order_line_form" model="ir.ui.view">
    		<field name="name">pr_purchase_order_line_form</field>
    		<field name="model">purchase.order.line</field>
    		<field name="inherit_id" ref="purchase.purchase_order_line_form"/>
    		<field name="arch" type="xml">
    			<xpath expr="//sheet/group/group/label[@for='product_qty']" position="before">
    				<field name='currency_id' domain="[('company_id','=',parent.company_id)]" required="1" on_change="currency_id_change(parent.pricelist_id,product_id,product_qty,False,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,False,parent.state,parent.currency_id , currency_id,context)"
    					options="{'no_create':true}"/>
    				<field name='packing_id' options="{'no_create':true}"/> 
    			</xpath>
    			
    			<xpath expr="//sheet/group/group/field[@name='company_id']" position="after">
    				<field name="ref_code"/>
    				<field name="tariff_code"/>
    				<field name="size"/>
    			</xpath>
    			
    		</field>
    	</record>
    	
		<record id="pr_view_purchase_order_filter" model="ir.ui.view">
            <field name="name">pr_view_purchase_order_filter</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">		
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name='origin'/>
					<field name='company_id'/>
					<field name="location_id"/>
				</xpath>
            	<xpath expr="//filter[@string='Expected Month']" position="after">
            		<filter string = "Company" icon="terp-partner" domain="[]" context="{'group_by':'company_id'}"/>
            	</xpath>
            		
            </field>
        </record>
    	
<!--    	**************************************************************************************
    									Purchase -> Tree
    	***************************************************************************************-->
    	
    	<record id="pr_purchase_order_tree" model="ir.ui.view">
    		<field name="name">purchase.order.tree</field>
    		<field name="model">purchase.order</field>
    		<field name="inherit_id" ref="purchase.purchase_order_tree"/>
    		<field name="arch" type="xml">
    			<field name="amount_total" position="after">
    				<field name="currency_id"/>
    				<field name="partner_id_ref" invisible='1'/>
    				<field name="in_records" invisible="1"/>
    			</field>
    		</field>
    	</record>
   
   
    <!--    	**************************************************************************************
    								Purchase Requisitions
    ***************************************************************************************-->
    	<menuitem action="purchase.purchase_rfq" id="purchase.menu_purchase_rfq"
    		parent="purchase.menu_procurement_management"
    		sequence="1"/>
    	
    	<menuitem
    		id="purchase_requisition.menu_purchase_requisition_pro_mgt"
    		sequence="0"
    		parent="purchase.menu_procurement_management"
    		action="purchase_requisition.action_purchase_requisition"/>
		
    	<record model="ir.actions.act_window" id="purchase_requisition.action_purchase_requisition">
    		<field name="name">Purchase Requisitions</field>
    	</record>
    	
    	<!--    	**************************************************************************************
    								Purchase Quotations - > Sample
    ***************************************************************************************-->	
    	<record id="purchase_rfq_sample" model="ir.actions.act_window">
    		<field name="name">Requests for Sample</field>
    		<field name="type">ir.actions.act_window</field>
    		<field name="res_model">purchase.order</field>
    		<field name="context">{'default_type':'sample'}</field>
    		<field name="domain">[('type','=','sample')]</field>
    		<field name="view_mode">tree,form,graph,calendar</field>
    		<field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
    		<field name="help" type="html">
    			<p class="oe_view_nocontent_create">
    				Click to create a request for Sample quotation.
    			</p><p>
    				The quotation contains the history of the discussion/negotiation
    				you had with your supplier. Once confirmed, a request for
    				quotation is converted into a purchase order.
    			</p><p>
    				Most propositions of purchase orders are created automatically
    				by Odoo based on inventory needs.
    			</p>
    		</field>
    	</record>
    	
    	<menuitem action="purchase_rfq_sample" id="menu_purchase_rfq_sample"
    		parent="purchase.menu_procurement_management"
    		sequence="0"/>
 	
    	<record id="purchase_sample_tree" model="ir.ui.view">
    		<field name="name">purchase.sample.tree</field>
    		<field name="model">purchase.order</field>
    		<field name="arch" type="xml">
    			<tree fonts="bold:message_unread==True" colors="grey:state=='cancel';blue:state in ('wait','confirmed');red:state in ('except_invoice','except_picking')" string="Purchase Order">
    				<field name="message_unread" invisible="1"/>
    				<field name="name" string="Reference"/>
    				<field name="date_order" />
    				<field name="partner_id"/>
    				<field name="company_id" groups="base.group_multi_company" widget="selection"/>
    				<field name="minimum_planned_date" invisible="context.get('quotation_only', False)"/>
    				<field name="origin"/>
    				<field name="state"/>
    				<field name="type" invisible="1"/>
    				<field name="partner_id_ref" invisible="1"/>
    			</tree>
    		</field>
    	</record>
    	
    	<record id="purchase_sample_form" model="ir.ui.view">
    		<field name="name">purchase.sample.form</field>
    		<field name="model">purchase.order</field>
    		<field name="arch" type="xml">
    			<form string="Purchase Sample">
    				<header>
    					<button name="wkf_send_rfq" states="draft" string="Send RFQ by Email" type="object" context="{'send_rfq':True}" class="oe_highlight"/>
    					<button name="wkf_send_rfq" states="sent" string="Re-Send RFQ by Email" type="object" context="{'send_rfq':True}"/>
    					<button name="print_quotation" string="Print RFQ" type="object" states="draft" class="oe_highlight" groups="base.group_user"/>
    					<button name="print_quotation" string="Re-Print RFQ" type="object" states="sent" groups="base.group_user"/>
    					<button name="purchase_confirm" states="draft" string="Confirm Order" id="draft_confirm"/>
    					<button name="wkf_send_rfq" states="approved" string="Send PO by Email" type="object" context="{'send_rfq':False}"/>
    					<button name="view_picking" string="Receive Products" type="object" attrs="{'invisible': ['|', ('shipped','=',True), ('state','!=', 'approved')]}" class="oe_highlight"/>
    					<button name="view_invoice" string="Receive Invoice" type="object" attrs="{'invisible': ['|', ('invoice_method','in', ['picking', 'manual']), '|', ('state','!=', 'approved'), ('invoiced','=',True) ]}" class="oe_highlight"/>
    					<button name="action_cancel_draft" states="cancel,sent,confirmed" string="Set to Draft" type="object" />
    					<button name="action_cancel" states="draft,confirmed,sent,bid,approved,except_picking,except_invoice" string="Cancel" type="object" />
    					<field name="state" widget="statusbar" statusbar_visible="draft,sent,bid,approved,done" statusbar_colors='{"except_picking":"red","except_invoice":"red","confirmed":"blue"}' readonly="1"/>
    				</header>
    				<sheet>
    					<div class="oe_title">
    						<h1>
    							<label string="Request for Sample " attrs="{'invisible': [('state','not in',('draft','sent','bid'))]}"/>
    							<label string="Sample Order " attrs="{'invisible': [('state','in',('draft','sent','bid'))]}"/>
    							<field name="name" class="oe_inline" readonly="1"/>
    						</h1>
    					</div>
    					<group>
    						<group>
    							<field name="partner_id" on_change="onchange_partner_id(partner_id, context)" context="{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0}" 
    								domain="[('supplier','=',True)]" options="{'no_create':true}"/>
    							<field name="partner_ref"/><field name="partner_id_ref" invisible="1"/>
    							<field name="pricelist_id" groups="product.group_purchase_pricelist" domain="[('type','=','purchase'),('company_id','=',company_id)]" 
    								on_change="onchange_pricelist(pricelist_id, context)" options="{'no_create':true}"/>
    							<field name="currency_id" groups="base.group_multi_currency" options="{'no_create':true}" domain="[('company_id','=',company_id)]"/>
    							<field name="journal_id" invisible='1'/>
    							
    						</group>
    						<group>
    							<field name="date_order"/>
    							<field name="origin" attrs="{'invisible': [('origin','=',False)]}"/>
    							<field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
    							<field name="picking_type_id" on_change="onchange_picking_type_id(picking_type_id, context)" domain="[('code','=','incoming')]" options="{'no_create': True}" context="{'special_shortened_wh_name': True}" groups="stock.group_locations"/>
    							
    							<!--<field name="dest_address_id" string="Customer Address" on_change="onchange_dest_address_id(dest_address_id, context)"
    								attrs="{'invisible':[('related_usage','!=','customer')],
    								'required': [('related_usage','=', 'customer')]}"
    								groups="stock.group_locations"/>-->
    						</group>
    					</group>
    					<notebook>
    						<page string="Products">
    							<field name="order_line">
    								<tree string="Purchase Order Lines" editable="bottom">
    									<field name="product_id" on_change="onchange_product_id(parent.pricelist_id,product_id,0,False,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,False,False,parent.state,context)"
    										context="{'currency_id':currency_id}" options="{'no_create':true}"/>
    									<field name="name"/>
    									<field name="date_planned"/>
    									<field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
    									<field name="account_analytic_id" groups="purchase.group_analytic_accounting" domain="[('type','not in',('view','template'))]"/>
    									<field name="product_qty" on_change="onchange_product_id(parent.pricelist_id,product_id,product_qty,product_uom,parent.partner_id,parent.date_order,parent.fiscal_position,date_planned,name,False,parent.state,context)"
    										   context="{'currency_id':currency_id}"/>
    									<field name="product_uom" groups="product.group_uom" on_change="onchange_product_uom(parent.pricelist_id,product_id,product_qty,product_uom,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,False,parent.state,context)"
    											options = "{'no_create':true}"/>
    									<field name='currency_id'  required="1" on_change="currency_id_change(parent.pricelist_id,product_id,product_qty,False,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,False,parent.state,parent.currency_id , currency_id,context)"
    										domain="[('company_id','=',parent.company_id)]" options = "{'no_create':true}"/>
    									<field name="price_unit"/>
    									<field name="state" invisible="1"/>
    								</tree>
    							</field>
    							
    							<div class="oe_clear"/>
    							<field name="notes" class="oe_inline" placeholder="Terms and conditions..."/>
    						</page>
    						
    						<page string="Deliveries &amp; Invoices">
    							<group>
    								<group>
    									<field name="minimum_planned_date"/>
    									<field name="location_id" groups="stock.group_locations" options="{'no_create':true}"/>
    									<field name="shipped" groups="base.group_no_one"/>
    								</group>
    								<group>
    									<field name="invoice_method"/>
    									<field name="invoiced"/>
    									<field name="payment_term_id" options="{'no_open': True, 'no_create': True}"/>
    									<field name="fiscal_position" attrs="{'readonly': [('invoiced','=', True)]}" options="{'no_create':true}" />
    									<!-- We do not need these fields anymore, the information is in open chatter -->
    									<field name="validator" groups="base.group_no_one"/>
    									<field name="date_approve" groups="base.group_no_one"/>
    								</group>
    							</group>
    						</page>
    					</notebook>
    				</sheet>
    				<div class="oe_chatter">
    					<field name="message_follower_ids" widget="mail_followers"/>
    					<field name="message_ids" widget="mail_thread"/>
    				</div>
    			</form>
    		</field>
    	</record>
    	
    	<record id="action_sample_tree_view1" model="ir.actions.act_window.view">
    		<field name="sequence" eval="1"/>
    		<field name="view_mode">tree</field>
    		<field name="view_id" ref="purchase_sample_tree"/>
    		<field name="act_window_id" ref="purchase_rfq_sample"/>
    	</record>
    	
    	<record id="action_sample_form_view1" model="ir.actions.act_window.view">
    		<field eval="2" name="sequence"/>
    		<field name="view_mode">form</field>
    		<field name="view_id" ref="purchase_sample_form"/>
    		<field name="act_window_id" ref="purchase_rfq_sample"/>
    	</record>
    	
    	
    
    <!--**************************************************************************************
    								Purchase -> Requests for Quotation
    ***************************************************************************************-->	
    	<record id="purchase.purchase_rfq" model="ir.actions.act_window">
    		<field name="domain">[('state','in',('draft','sent','bid','cancel', 'confirmed')),('type','=','purchase')]</field>
    	</record>
    	
    	<record id="action_rfq_form_view1" model="ir.actions.act_window.view">
    		<field eval="2" name="sequence"/>
    		<field name="view_mode">form</field>
